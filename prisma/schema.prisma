generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Invite {
  id         String   @id @default(uuid())
  email      String
  role       UserRole
  token      String   @unique
  expiresAt  DateTime
  acceptedAt DateTime?

  @@map("invites")
}

enum UserRole {
  ADMIN
  MANAGER
  STAFF
}

model Project {
  id         String     @id @default(uuid())
  name      String     @db.VarChar(255)
  description    String     @db.Text
  status     ProjectStatus @default(ACTIVE)
  isDeleted Boolean    @default(false)
  createdBy   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([createdBy])
  @@map("projects")
}

enum ProjectStatus {
    ACTIVE
    ARCHIVED
    DELETED
}